<section id="create-container">
  <div class="create-container-info">
    <h1>Create Course</h1>
    <form method="post">
      <label>Title:</label>
      <input name="title" type="text" id="title" {{#if title}} value="{{title}}" {{/if}} />

      <label>Type:</label>
      <input name="type" type="text" id="type" {{#if type}} value="{{type}}" {{/if}}/>

      <label>Certificate:</label>
      <input name="certificate" type="text" id="certificate" {{#if certificate}} value="{{certificate}}" {{/if}}/>

      <label>Image:</label>
      <input name="image" type="text" id="image" placeholder="http://..." {{#if image}} value="{{image}}" {{/if}}/>

      <label>Description:</label>
      <textarea id="content" name="description">{{#if description}} {{title}} {{/if}}</textarea>

      <label>Price:</label>
      <input name="price" type="number" id="price" {{#if price}} value="{{price}}" {{/if}}/>

      <input type="submit" id="btn" value="Create" />
    </form>
  </div>
</section>